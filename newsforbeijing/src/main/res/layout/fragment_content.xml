<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yuxiaobai.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_main_style"
            android:drawableTop="@drawable/rb_home_selector"
            android:text="主页"

            />


        <RadioButton
            android:id="@+id/rb_news"
            style="@style/bottom_main_style"
            android:drawableTop="@drawable/rb_news_selector"
            android:text="新闻"

            />


        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_main_style"
            android:drawableTop="@drawable/rb_setting_selector"
            android:text="设置中心"

            />


    </RadioGroup>

</LinearLayout>